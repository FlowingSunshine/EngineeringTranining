<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.lazysong.listview.RegisterActivity">

    <TextView
        android:id="@+id/ic_register"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp"
        android:text="学术君"
        android:textSize="52sp"
        android:textColor="@color/colorPrimary"/>

    <EditText
        android:id="@+id/register_userid"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:hint="用户ID"
        android:layout_below="@id/ic_register"/>

    <EditText
        android:id="@+id/register_passwd"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:inputType="textPassword"
        android:hint="密码"
        android:layout_below="@id/register_userid"/>

    <EditText
        android:id="@+id/register_username"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:hint="用户名"
        android:layout_below="@id/register_passwd"/>

    <Button
        android:id="@+id/btn_register"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_below="@id/register_username"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="注册"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:background="@color/colorPrimary"/>

    <TextView
        android:id="@+id/to_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="已有学术君账号？立即登陆"
        android:textColor="@color/colorPrimary"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/btn_register"
        android:layout_marginTop="28dp"/>

</RelativeLayout>
